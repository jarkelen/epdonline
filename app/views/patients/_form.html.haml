= form_for @patient do |f|
  - if @patient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patient.errors.count, "error")} prohibited this patient from being saved:"
      %ul
        - @patient.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :bsn
    = f.text_field :bsn
  .field
    = f.label :birthdate
    = f.date_select :birthdate
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :zipcode
    = f.text_field :zipcode
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :insurance_company
    = f.text_field :insurance_company
  .field
    = f.label :insurance_number
    = f.number_field :insurance_number
  .field
    = f.label :startdate
    = f.date_select :startdate
  .field
    = f.label :enddate
    = f.date_select :enddate
  .actions
    = f.submit 'Save'
